<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/white" android:startColor="@color/beigeFonce" />
            <corners android:bottomLeftRadius="7dp" android:bottomRightRadius="7dp" android:radius="0.1dp" android:topLeftRadius="7dp" android:topRightRadius="7dp" />
            <stroke android:width="3dp" android:color="@color/beigeTresFonce"></stroke>
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/beigeFonce" android:startColor="@color/white" />
            <corners android:bottomLeftRadius="7dp" android:bottomRightRadius="7dp" android:radius="0.1dp" android:topLeftRadius="7dp" android:topRightRadius="7dp" />
            <stroke android:width="3dp" android:color="@color/beigeTresFonce"></stroke>
        </shape>
    </item>
</selector>