<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beigeFonce" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|center_vertical|fill_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:text="@string/startDate"
            android:textColor="@color/black"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_size" />

        <GridLayout
            android:id="@+id/GridLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageViewCiergepascal"
                android:layout_width="50dp"
                android:layout_height="140dp"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:contentDescription="@string/BigCandel"
                android:src="@drawable/ciergepascal" />

            <ImageView
                android:id="@+id/imageViewCiergemois"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:contentDescription="@string/MediumCandel"
                android:src="@drawable/ciergemois" />

            <ImageView
                android:id="@+id/imageViewluminion"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:contentDescription="@string/smallCandel"
                android:src="@drawable/luminion" />

            <TextView
                android:id="@+id/editTextCiergepascal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="0"
                android:ems="10"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/editTextCiergemois"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="1"
                android:ems="10"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/editTextluminion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="2"
                android:ems="10"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="@dimen/text_size" />
        </GridLayout>

        <Button
            android:id="@+id/ButtonDataExport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="@drawable/my_shape"
            android:padding="7dp"
            android:text="@string/DataExport" />

    </LinearLayout>

</ScrollView>